  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",

    "format": "biome format",
    "format-w": "biome format --write",
    "lint": "biome lint",
    "lint-f": "biome lint --fix",
    "check": "biome check",
    "check-w": "biome check --write",

    "test:mocks": "vitest --config vite.config.testing.ts",
    "test:back": "vitest --config vite.config.backend.ts",
    "test:front": "vitest --config vite.config.frontend.ts",
    "test-ui:mocks": "vitest --ui --config vite.config.testing.ts",
    "test-ui:back": "vitest --ui --config vite.config.backend.ts",
    "test-ui:front": "vitest --ui --config vite.config.frontend.ts",
    "test": "npm run test:mocks && npm run test:back && npm run test:front",
    "test-ui": "npm run test-ui:mocks && npm run test-ui:back && npm run test-ui:front"
  },
  "dependencies": {
    "react": "^19.0.0",
