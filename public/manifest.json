{
  "manifest_version": 3,
  "author": "Alejandro Aranda Mu√±oz",
  "name": "Search Shortener",
  "version": "0.0.0",
  "description": "------------------",
  "icons": {
    "16": "icons/searchShortnerExtensionIcon16.png",
    "32": "icons/searchShortnerExtensionIcon32.png",
    "48": "icons/searchShortnerExtensionIcon48.png",
    "128": "icons/searchShortnerExtensionIcon128-96.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/searchShortnerExtensionIcon16.png",
      "32": "icons/searchShortnerExtensionIcon32.png",
      "48": "icons/searchShortnerExtensionIcon48.png",
      "128": "icons/searchShortnerExtensionIcon128-96.png"
    },
    "default_title": "Search Shortener"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "search": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Shift+Alt+Space"
      },
      "description": "Abrir el buscador"
    }
  }
}
